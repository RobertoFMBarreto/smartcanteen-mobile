<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    android:background="@drawable/my_order_card">

    <TextView
        android:id="@+id/meals_allowed_change_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Nome Ingrediente"
        android:textColor="@color/black"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/meals_allowed_change_card_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="@string/type"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/meals_allowed_change_card_name"
        app:layout_constraintLeft_toLeftOf="@+id/meals_allowed_change_card_name"
        />

    <TextView
        android:id="@+id/meals_allowed_change_card_inc_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/only_increase"
        android:textColor="@color/background_color"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/meals_allowed_change_card_name"
        app:layout_constraintLeft_toRightOf="@+id/meals_allowed_change_card_type"
        />



</androidx.constraintlayout.widget.ConstraintLayout>