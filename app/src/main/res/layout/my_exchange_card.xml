<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="5dp"
    android:background="@drawable/my_order_card">

    <ImageView
        android:id='@+id/my_exchanges_card_image'
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_marginRight="100dp"
        android:background="@drawable/my_order_card_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/my_exchanges_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Identificação"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/my_exchanges_card_image"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/my_exchanges_card_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="Quantidade"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toRightOf="@id/my_exchanges_card_image"
        app:layout_constraintTop_toBottomOf="@id/my_exchanges_card_name"/>

    <TextView
        android:id="@+id/my_exchanges_card_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="Preço"
        android:textColor="@color/background_color"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toRightOf="@id/my_exchanges_card_image"
        app:layout_constraintTop_toBottomOf="@id/my_exchanges_card_quantity"/>

    <TextView
        android:id="@+id/my_exchanges_card_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Estado"
        android:gravity="center"
        android:textColor="@color/background_color"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toRightOf="@id/my_exchanges_card_quantity"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>