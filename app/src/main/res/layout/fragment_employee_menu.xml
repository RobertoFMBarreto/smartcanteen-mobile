<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.employee_fragments.EmployeeMenuFragment">

    <TextView
        android:id="@+id/employee_menu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/background_color"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/employee_menu_see_menu_button"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/green_gradient_square"
        android:elevation="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employee_menu_title" />

    <TextView
        android:id="@+id/employee_menu_see_menu_button_text"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:text="@string/see_menu"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:elevation="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/employee_menu_see_menu_button"
        app:layout_constraintTop_toTopOf="@+id/employee_menu_see_menu_button"
        />
    <ImageView
        android:id="@+id/employee_menu_see_menu_button_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/fastfood_employee_menu_button"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="5dp"
        app:layout_constraintRight_toRightOf="@+id/employee_menu_see_menu_button"
        app:layout_constraintBottom_toBottomOf="@+id/employee_menu_see_menu_button"/>


    <ImageView
        android:id="@+id/employee_menu_see_orders_button"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:background="@drawable/yellow_gradient_square"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="30dp"
        android:elevation="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employee_menu_title"/>

    <TextView
        android:id="@+id/employee_menu_see_orders_button_text"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:text="@string/see_orders"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:elevation="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/employee_menu_see_orders_button"
        app:layout_constraintTop_toTopOf="@+id/employee_menu_see_orders_button"
        />
    <ImageView
        android:id="@+id/employee_menu_see_orders_button_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/ic_baseline_inventory_24"
        android:backgroundTint="#B7A255"
        android:elevation="5dp"
        app:layout_constraintRight_toRightOf="@+id/employee_menu_see_orders_button"
        app:layout_constraintBottom_toBottomOf="@+id/employee_menu_see_orders_button"/>


    <ImageView
        android:id="@+id/employee_menu_total_orders_card"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:background="@drawable/square_card_background"
        android:elevation="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/employee_menu_see_menu_button"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/employee_menu_total_orders_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/total_requests"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="@+id/employee_menu_total_orders_card"
        app:layout_constraintEnd_toEndOf="@+id/employee_menu_total_orders_card"
        app:layout_constraintTop_toTopOf="@+id/employee_menu_total_orders_card" />

    <TextView
        android:id="@+id/employee_menu_total_orders_card_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:textColor="@color/green_ipca"
        android:textSize="20sp"
        android:textStyle="bold"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="@+id/employee_menu_total_orders_card"
        app:layout_constraintEnd_toEndOf="@+id/employee_menu_total_orders_card"
        app:layout_constraintTop_toBottomOf="@+id/employee_menu_total_orders_card_title" />

    <ImageView
        android:id="@+id/employee_menu_delivered_orders_card"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:background="@drawable/square_card_background"
        android:elevation="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/employee_menu_see_menu_button"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/employee_menu_delivered_orders_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/delivered_orders"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="@+id/employee_menu_delivered_orders_card"
        app:layout_constraintEnd_toEndOf="@+id/employee_menu_delivered_orders_card"
        app:layout_constraintTop_toTopOf="@+id/employee_menu_delivered_orders_card" />

    <TextView
        android:id="@+id/employee_menu_delivered_orders_card_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:textColor="@color/green_ipca"
        android:textSize="20sp"
        android:textStyle="bold"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="@+id/employee_menu_delivered_orders_card"
        app:layout_constraintEnd_toEndOf="@+id/employee_menu_delivered_orders_card"
        app:layout_constraintTop_toBottomOf="@+id/employee_menu_delivered_orders_card_title" />
    <ImageView
        android:id="@+id/employee_menu_undelivered_orders_card"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:background="@drawable/square_card_background"
        android:elevation="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/employee_menu_total_orders_card"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/employee_menu_total_undelivered_card_title"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/undelivered_orders"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textStyle="bold"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="@+id/employee_menu_undelivered_orders_card"
        app:layout_constraintEnd_toEndOf="@+id/employee_menu_undelivered_orders_card"
        app:layout_constraintTop_toTopOf="@+id/employee_menu_undelivered_orders_card" />

    <TextView
        android:id="@+id/employee_menu_total_undelivered_card_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:textColor="@color/green_ipca"
        android:textSize="20sp"
        android:textStyle="bold"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="@+id/employee_menu_undelivered_orders_card"
        app:layout_constraintEnd_toEndOf="@+id/employee_menu_undelivered_orders_card"
        app:layout_constraintTop_toBottomOf="@+id/employee_menu_total_undelivered_card_title" />
    <ImageView
        android:id="@+id/employee_menu_trades_done_card"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:background="@drawable/square_card_background"
        android:elevation="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/employee_menu_delivered_orders_card"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/employee_menu_trades_done_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/trades_made"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="@+id/employee_menu_trades_done_card"
        app:layout_constraintEnd_toEndOf="@+id/employee_menu_trades_done_card"
        app:layout_constraintTop_toTopOf="@+id/employee_menu_trades_done_card" />

    <TextView
        android:id="@+id/employee_menu_trades_done_card_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:textColor="@color/green_ipca"
        android:textSize="20sp"
        android:textStyle="bold"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="@+id/employee_menu_trades_done_card"
        app:layout_constraintEnd_toEndOf="@+id/employee_menu_trades_done_card"
        app:layout_constraintTop_toBottomOf="@+id/employee_menu_trades_done_card_title" />
    <TextView
        android:id="@+id/employee_menu_total_requests_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:text="@string/total_requests"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employee_menu_undelivered_orders_card"/>

    <TextView
        android:id="@+id/employee_menu_delivered_requests_progress_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:text="@string/delivered_orders"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employee_menu_total_requests_title"/>

    <ProgressBar
        android:elevation="5dp"
        android:id="@+id/employee_menu_delivered_requests_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/custom_progress_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:indeterminate="false"
        android:max="100"
        android:minHeight="15dp"
        android:progress="90"
        app:layout_constraintTop_toBottomOf="@+id/employee_menu_delivered_requests_progress_lable"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/employee_menu_undelivered_requests_progress_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:text="@string/undelivered_orders"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employee_menu_delivered_requests_progress_bar"/>

    <ProgressBar
        android:elevation="5dp"
        android:id="@+id/employee_menu_undelivered_requests_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/custom_progress_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:indeterminate="false"
        android:max="100"
        android:minHeight="15dp"
        android:progress="90"
        app:layout_constraintTop_toBottomOf="@+id/employee_menu_undelivered_requests_progress_lable"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>