<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="5dp"
    android:background="@drawable/my_order_card">

    <TextView
        android:id="@+id/ingredients_change_card_4_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Nome Ingrediente"
        android:textColor="@color/black"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/ingredients_change_card_4_uncheck"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:onClick="uncheck"
        android:text="X"
        android:textAlignment="center"
        android:paddingBottom="15dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/unchecked_circle"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/ingredients_change_card_4_check"
        />

    <Button
        android:id="@+id/ingredients_change_card_4_check"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:onClick="check"
        android:background="@drawable/check_circle"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>