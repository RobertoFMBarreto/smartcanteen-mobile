<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="5dp"
    android:background="@drawable/my_order_card">

    <TextView
        android:id="@+id/ingredients_change_card_4_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Nome Ingrediente"
        android:textColor="@color/black"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/ingredients_change_card_4_uncheck_circle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/bottom_sheet_quantity_circle"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ingredients_change_card_4_check"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ingredients_change_card_1_decrement"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:onClick="uncheck"
        android:background="@drawable/close"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        app:layout_constraintEnd_toEndOf="@+id/ingredients_change_card_4_uncheck_circle"
        app:layout_constraintBottom_toBottomOf="@+id/ingredients_change_card_4_uncheck_circle"
        />

    <TextView
        android:id="@+id/ingredients_change_card_4_check_circle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/bottom_sheet_quantity_circle"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ingredients_change_card_4_uncheck_circle"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ingredients_change_card_4_check"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:onClick="check"
        android:background="@drawable/check"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        app:layout_constraintEnd_toEndOf="@+id/ingredients_change_card_4_check_circle"
        app:layout_constraintBottom_toBottomOf="@+id/ingredients_change_card_4_check_circle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>