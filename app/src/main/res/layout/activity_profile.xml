<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView

        android:id="@+id/main_Profile_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perfil"
        android:textAlignment="center"
        android:textColor="@color/Green_ipca"
        android:textSize="30sp"
        android:paddingTop="50dp"
        tools:ignore="MissingConstraints" />

    <ImageView
            android:id="@+id/main_Image_imageview"
            app:layout_constraintTop_toBottomOf="@+id/main_Profile_textview"
            android:layout_marginTop="50dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/circle"

                                                />

        <ImageView
            android:id="@+id/main_Edit_foto_profile"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="90dp"
            app:layout_constraintTop_toBottomOf="@+id/main_Profile_textview"
            app:layout_constraintLeft_toLeftOf="@+id/main_Image_imageview"
            android:src="@drawable/edit"
            />

    <EditText
        android:id="@+id/main_Name_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:gravity="center_horizontal"
        android:text="  Nome  "
        app:layout_constraintTop_toBottomOf="@+id/main_Image_imageview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColorHint="@color/black"
         />

    <ImageView
        android:id="@+id/main_Edit_nome"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="80dp"
        app:layout_constraintTop_toBottomOf="@+id/main_Image_imageview"
        app:layout_constraintLeft_toLeftOf="@+id/main_Name_editText"
        android:src="@drawable/edit"
        />

    <EditText
        android:id="@+id/main_PreferenceCantine_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:gravity="center_horizontal"
        android:text="  Cantina preferencial  "
        app:layout_constraintTop_toBottomOf="@+id/main_Name_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColorHint="@color/black"
        />

    <ImageView
        android:id="@+id/main_Edit_PreferenceCantine"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="130dp"
        app:layout_constraintTop_toBottomOf="@+id/main_Name_editText"
        app:layout_constraintLeft_toLeftOf="@+id/main_Name_editText"
        android:src="@drawable/edit"
        />

    <EditText
        android:id="@+id/main_Institute_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:gravity="center_horizontal"
        android:text="  Instituição  "
        app:layout_constraintTop_toBottomOf="@+id/main_PreferenceCantine_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColorHint="@color/black"
        />

    <ImageView
        android:id="@+id/main_Edit_institute"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="140dp"
        app:layout_constraintTop_toBottomOf="@+id/main_PreferenceCantine_editText"
        app:layout_constraintLeft_toLeftOf="@+id/main_PreferenceCantine_editText"
        android:src="@drawable/edit"
        />
</androidx.constraintlayout.widget.ConstraintLayout>