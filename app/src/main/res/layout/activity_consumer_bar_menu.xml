<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.ConsumerBarMenuActivity">
    <TextView
        android:id="@+id/consumer_bar_menu_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Menu"
        android:textStyle="bold"
        android:textColor="@color/background_color"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Spinner
        android:id="@+id/consumer_bar_menu_bar_select_sp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/spinner_style"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/consumer_bar_menu_title_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <ProgressBar
        android:id="@+id/consumer_bar_menu_meals_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/consumer_bar_menu_bar_select_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/consumer_bar_menu_meals_progress_bar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/background_color"
        android:layout_marginTop="10dp"
        android:text="@string/Loading..."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/background_color"
        app:layout_constraintTop_toBottomOf="@+id/consumer_bar_menu_meals_progress_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/consumer_bar_menu_rv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipChildren="false"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/consumer_bar_menu_bar_select_sp" />

</androidx.constraintlayout.widget.ConstraintLayout>